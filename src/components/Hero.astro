<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated grid background -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 animate-grid-move"
      style="background-image: linear-gradient(rgba(0,191,255,0.15) 1px, transparent 1px), linear-gradient(90deg, rgba(0,191,255,0.15) 1px, transparent 1px); background-size: 60px 60px;">
    </div>
  </div>

  <!-- Gradient orbs -->
  <div class="absolute top-1/4 -left-32 w-96 h-96 bg-nc-sky/10 rounded-full blur-3xl animate-pulse-glow"></div>
  <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-nc-sky/8 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 1.5s;"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-nc-deep-light/50 rounded-full blur-3xl"></div>

  <!-- Floating particles -->
  <div class="absolute top-20 left-[15%] w-2 h-2 bg-nc-sky/40 rounded-full animate-float" style="animation-delay: 0s;"></div>
  <div class="absolute top-40 right-[20%] w-1.5 h-1.5 bg-nc-sky/30 rounded-full animate-float" style="animation-delay: 1s;"></div>
  <div class="absolute bottom-32 left-[25%] w-1 h-1 bg-nc-sky/50 rounded-full animate-float" style="animation-delay: 2s;"></div>
  <div class="absolute top-[60%] right-[10%] w-2.5 h-2.5 bg-nc-sky/20 rounded-full animate-float" style="animation-delay: 3s;"></div>
  <div class="absolute bottom-40 right-[30%] w-1.5 h-1.5 bg-nc-sky/35 rounded-full animate-float" style="animation-delay: 0.5s;"></div>

  <!-- Content -->
  <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 text-center">
    <!-- Badge -->
    <div class="scroll-animate fade-up inline-flex items-center gap-2 px-4 py-2 mb-8 border border-nc-sky/20 rounded-full bg-nc-sky/5 backdrop-blur-sm">
      <span class="w-2 h-2 bg-nc-sky rounded-full animate-pulse"></span>
      <span class="text-nc-sky text-sm font-medium">Desarrollo de Software a Medida</span>
    </div>

    <!-- Title -->
    <h1 class="scroll-animate fade-up delay-100 text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold leading-tight tracking-tight">
      Construimos el software
      <br />
      <span class="bg-gradient-to-r from-nc-sky via-nc-sky-light to-nc-sky bg-clip-text text-transparent">
        que tu negocio necesita
      </span>
    </h1>

    <!-- Subtitle -->
    <p class="scroll-animate fade-up delay-200 mt-6 md:mt-8 text-lg md:text-xl text-nc-gray max-w-2xl mx-auto leading-relaxed">
      Transformamos ideas en soluciones digitales escalables, modernas y de alto rendimiento. Tu visión, nuestra ingeniería.
    </p>

    <!-- CTAs -->
    <div class="scroll-animate fade-up delay-300 mt-10 flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="#contact"
        class="group inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-nc-sky to-nc-sky-dark text-white font-semibold rounded-xl hover:shadow-xl hover:shadow-nc-sky/25 transition-all duration-300 hover:-translate-y-1"
      >
        Solicitar Propuesta
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a
        href="#services"
        class="inline-flex items-center gap-2 px-8 py-4 border border-white/10 text-white font-medium rounded-xl hover:bg-white/5 hover:border-white/20 transition-all duration-300"
      >
        Ver Servicios
      </a>
    </div>

    <!-- Stats -->
    <div class="scroll-animate fade-up delay-400 mt-16 grid grid-cols-3 gap-8 max-w-lg mx-auto">
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-white">50+</div>
        <div class="text-sm text-nc-gray mt-1">Proyectos</div>
      </div>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-white">30+</div>
        <div class="text-sm text-nc-gray mt-1">Clientes</div>
      </div>
      <div class="text-center">
        <div class="text-2xl md:text-3xl font-bold text-white">99%</div>
        <div class="text-sm text-nc-gray mt-1">Satisfacción</div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-nc-gray/50">
    <span class="text-xs tracking-widest uppercase">Scroll</span>
    <div class="w-5 h-8 rounded-full border border-nc-gray/30 flex items-start justify-center p-1">
      <div class="w-1 h-2 bg-nc-sky rounded-full animate-bounce"></div>
    </div>
  </div>
</section>
